{
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "react",
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "settings": {
    "import/ignore": [
      "node_modules",
      "\\.(json|css|jpg|png|gif|eot|svg|ttf|woff|woff2|mp4|webm)$",
    ],
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.dev.js"
      }
    },
    "import/core-modules": {
      "electron"
    }
  },
  "rules": {
    "eqeqeq": [ 2, "smart" ],
    "no-console": 1,
    "semi": [ 2, "never" ],
    "import/no-unresolved": 0,
    "import/namespace": 0,
    "import/default": 0,
    "import/named": 0
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  }
}
